<div id="<%= dom_id person %>">

    <div class="d-block">
      <%= image_tag(person.photo) if person.photo.attached? %>
    </div>

    <div class="d-block">
      <strong>Title:</strong>
      <%= person.title %>
    </div>

    <div class="d-block">
      <strong>First:</strong>
      <%= person.first %>
    </div>

    <div class="d-block">
      <strong>Last:</strong>
      <%= person.last %>
    </div>

    <div class="d-block">
      <strong>Gender:</strong>
      <%= person.gender %>
    </div>

  <div class="d-block">
      <strong>Email:</strong>
      <%= person.email %>
    </div>

</div>
